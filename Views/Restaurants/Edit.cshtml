@model RestaurantReserve.Models.Restaurant

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Restaurant</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="restaurantId" />

        <div class="form-group">
            <div class="col-md-10">
                @*<select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>*@
                <input type="hidden" asp-for="UserId" class="form-control" value="@ViewBag.UserId" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="address" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="city" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="pictureUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="pictureUrl" class="form-control" />
                <span asp-validation-for="pictureUrl" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-area="" asp-controller="Restaurants" asp-action="Owned">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
