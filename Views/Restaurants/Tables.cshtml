@model IEnumerable<RestaurantReserve.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@ViewData["currentUser"].ToString()

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tables)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tables)
            </td>
            <td>
                <a asp-area="" asp-controller="TableLayout" asp-action="Index" asp-route-id="@item.restaurantId">Modify the Layout</a>
            </td>
     
            <td>
                <a asp-action="Edit" asp-route-id="@item.restaurantId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.restaurantId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.restaurantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
