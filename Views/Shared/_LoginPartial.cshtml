@using Microsoft.AspNetCore.Identity
@using RestaurantReserve.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="nav navbar-nav navbar pull-right">
        <ul class="nav navbar-nav navbar pull-right">
            <li>
                <a asp-area="" asp-controller="Restaurants" asp-action="Owned">My Restaurants</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a><button style="color:#fff; margin-top:-5px; text-transform: uppercase; font-family:'Oswald',sans-serif; font-size: 15px; padding: 0; text-decoration: none;" type="submit" class="btn btn-link navbar-link">Log off</button></a>
            </li>
            
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar pull-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
